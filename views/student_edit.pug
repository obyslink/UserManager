extends layout

block content
  .card.border-success.mb-3
    h1.card-header #{title}
    form(method='POST', action='/students/edit/'+article._id)
      #form-group
        label.card-body.text-info.blockquote Administrator Code:
        input.form-control-lg(name='author', type='text', value=article.author)
      #form-group
        label.card-body.text-info.blockquote Student's name:
        input.form-control-lg(name='title', type='text', value=article.title)
      #form-group
        label.card-body.text-info.blockquote Student's details:
        textarea.form-control-lg(name='body')= article.body
      br
      input.btn-lg.btn-success.btn-block(type='submit',value='Submit')
