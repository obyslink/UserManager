extends layout

block content
  .card.border-success.mb-3
    h1.card-header= article.title
    h5.card-header Written by #{author}
    p.card-body.text-info= article.body
    hr
    if user
      if user.id ==article.author
        a.btn.btn-success(href='/articles/edit/'+article._id) Edit 
        a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete
    
